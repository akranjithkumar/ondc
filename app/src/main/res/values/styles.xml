<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card Styles -->
    <style name="Widget.ONDC.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/corner_radius_large</item>
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <style name="Widget.ONDC.Card.Flat" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/outline_variant</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.ONDC.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.ONDC.Button.Success" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/success</item>
        <item name="android:textColor">@color/on_success</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.ONDC.Button.Danger" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/error</item>
        <item name="android:textColor">@color/on_error</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.ONDC.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.ONDC.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">@dimen/corner_radius_small</item>
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="checkedIconEnabled">false</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.ONDC.Headline" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.ONDC.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.ONDC.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.ONDC.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.ONDC.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.ONDC.StatValue" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.ONDC.StatLabel" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.ONDC.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/surface</item>
        <item name="titleTextColor">@color/text_primary</item>
    </style>
</resources>
