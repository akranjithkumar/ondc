<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- Main Content -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="64dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_xl">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dashboard_welcome"
                            style="@style/TextAppearance.ONDC.Caption" />

                        <TextView
                            android:id="@+id/tvVendorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vendor Hub"
                            style="@style/TextAppearance.ONDC.Headline" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_xl"
                        android:layout_height="@dimen/icon_xl"
                        android:src="@drawable/ic_account"
                        android:contentDescription="Profile"
                        app:tint="@color/primary" />
                </LinearLayout>

                <!-- Stats Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <!-- Total Orders Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        app:cardCornerRadius="@dimen/corner_radius_large"
                        app:cardElevation="@dimen/elevation_card"
                        app:cardBackgroundColor="@color/primary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/card_padding">

                            <ImageView
                                android:layout_width="@dimen/icon_lg"
                                android:layout_height="@dimen/icon_lg"
                                android:src="@drawable/ic_orders"
                                app:tint="@color/white"
                                android:layout_marginBottom="@dimen/spacing_sm"
                                android:contentDescription="Orders icon" />

                            <TextView
                                android:id="@+id/tvTotalOrders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="@dimen/stat_value_size"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/stat_total_orders"
                                android:textSize="11sp"
                                android:textColor="#CCFFFFFF"
                                android:textAllCaps="true"
                                android:letterSpacing="0.05" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Fulfillment Rate Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_sm"
                        app:cardCornerRadius="@dimen/corner_radius_large"
                        app:cardElevation="@dimen/elevation_card"
                        app:cardBackgroundColor="@color/surface">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/card_padding">

                            <ImageView
                                android:layout_width="@dimen/icon_lg"
                                android:layout_height="@dimen/icon_lg"
                                android:src="@drawable/ic_check_circle"
                                app:tint="@color/success"
                                android:layout_marginBottom="@dimen/spacing_sm"
                                android:contentDescription="Fulfillment icon" />

                            <TextView
                                android:id="@+id/tvFulfillmentRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                style="@style/TextAppearance.ONDC.StatValue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/stat_fulfillment_rate"
                                style="@style/TextAppearance.ONDC.StatLabel" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Stats Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_xl">

                    <!-- Pending Orders -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_xs"
                        app:cardCornerRadius="@dimen/corner_radius_medium"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="@color/surface">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_md"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvPendingOrders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="22sp"
                                android:textColor="@color/status_pending"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/stat_pending_orders"
                                android:textSize="10sp"
                                android:textColor="@color/text_secondary"
                                android:textAllCaps="true" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Active Outlets -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_xs"
                        android:layout_marginEnd="@dimen/spacing_xs"
                        app:cardCornerRadius="@dimen/corner_radius_medium"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="@color/surface">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_md"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvActiveOutlets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="22sp"
                                android:textColor="@color/primary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/stat_active_outlets"
                                android:textSize="10sp"
                                android:textColor="@color/text_secondary"
                                android:textAllCaps="true" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Rating -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_xs"
                        app:cardCornerRadius="@dimen/corner_radius_medium"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="@color/surface">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_md"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="N/A"
                                android:textSize="22sp"
                                android:textColor="@color/warning"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rating"
                                android:textSize="10sp"
                                android:textColor="@color/text_secondary"
                                android:textAllCaps="true" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Seller App Health Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/section_seller_apps"
                        style="@style/TextAppearance.ONDC.Title" />

                    <TextView
                        android:id="@+id/tvSellerAppCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 / 0 healthy"
                        style="@style/TextAppearance.ONDC.Caption" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sellerAppsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/spacing_xl" />

                <!-- Low Stock Alerts Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:src="@drawable/ic_warning"
                        app:tint="@color/warning"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:contentDescription="Warning icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/section_low_stock"
                        style="@style/TextAppearance.ONDC.Title" />

                    <TextView
                        android:id="@+id/btnViewAllInventory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_view_all"
                        android:textColor="@color/primary"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:padding="@dimen/spacing_sm" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lowStockContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/spacing_xl" />

                <TextView
                    android:id="@+id/tvNoAlerts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/state_empty_alerts"
                    android:gravity="center"
                    android:padding="@dimen/spacing_xl"
                    android:visibility="gone"
                    style="@style/TextAppearance.ONDC.Subtitle" />

                <!-- Quick Actions -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_quick_actions"
                    android:layout_marginBottom="@dimen/spacing_md"
                    style="@style/TextAppearance.ONDC.Title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_xl">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSyncInventory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:text="@string/action_sync_inventory"
                        app:icon="@drawable/ic_refresh"
                        app:iconGravity="textStart"
                        style="@style/Widget.ONDC.Button.Outlined" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewOrders"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="@string/action_view_orders"
                        app:icon="@drawable/ic_orders"
                        app:iconGravity="textStart"
                        style="@style/Widget.ONDC.Button.Primary" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/primary"
        android:visibility="gone" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_height"
        android:layout_gravity="bottom"
        android:background="@color/bottom_nav_bg"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/bottom_nav_active"
        app:itemTextColor="@color/bottom_nav_active"
        app:labelVisibilityMode="labeled"
        android:elevation="@dimen/elevation_raised" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>