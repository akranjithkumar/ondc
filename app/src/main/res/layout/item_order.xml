<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_md"
    app:cardCornerRadius="@dimen/corner_radius_large"
    app:cardElevation="@dimen/elevation_card"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Priority Indicator Strip -->
        <View
            android:id="@+id/priorityIndicator"
            android:layout_width="@dimen/priority_indicator_width"
            android:layout_height="match_parent"
            android:background="@color/priority_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/card_padding">

            <!-- Header Row: Order ID + Status Chip -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_sm">

                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Order #ONDC-001"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="@dimen/spacing_md"
                    android:paddingEnd="@dimen/spacing_md"
                    android:paddingTop="@dimen/spacing_xs"
                    android:paddingBottom="@dimen/spacing_xs"
                    android:background="@drawable/bg_status_chip" />
            </LinearLayout>

            <!-- Priority Badge -->
            <TextView
                android:id="@+id/tvPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:paddingStart="@dimen/spacing_sm"
                android:paddingEnd="@dimen/spacing_sm"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/bg_priority_chip"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <!-- Customer Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_xs">

                <ImageView
                    android:layout_width="@dimen/icon_sm"
                    android:layout_height="@dimen/icon_sm"
                    android:src="@drawable/ic_people"
                    app:tint="@color/text_hint"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:contentDescription="Customer" />

                <TextView
                    android:id="@+id/tvCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    style="@style/TextAppearance.ONDC.Subtitle" />
            </LinearLayout>

            <!-- Delivery Info -->
            <TextView
                android:id="@+id/tvDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery: 123 Street"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <!-- Items + Amount Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_md">

                <TextView
                    android:id="@+id/tvItems"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3 items"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹450.00"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Seller App + Outlet -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_md">

                <TextView
                    android:id="@+id/tvSellerApp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="via SellerApp"
                    android:textSize="11sp"
                    android:textColor="@color/text_hint"
                    android:drawablePadding="@dimen/spacing_xs" />

                <TextView
                    android:id="@+id/tvOutlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outlet Name"
                    android:textSize="11sp"
                    android:textColor="@color/text_hint" />
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/actionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReject"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:text="@string/btn_reject"
                    android:textSize="12sp"
                    app:cornerRadius="@dimen/corner_radius_small"
                    style="@style/Widget.ONDC.Button.Danger" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAccept"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="@string/btn_accept"
                    android:textSize="12sp"
                    app:cornerRadius="@dimen/corner_radius_small"
                    style="@style/Widget.ONDC.Button.Success" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
